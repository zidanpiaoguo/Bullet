<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionSheetDialogStyle" parent="android:Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置窗体内容背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="CommonDialog">
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--进出动画-->
        <item name="android:windowEnterAnimation">@anim/dialog_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>

        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>